<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_item_tree" model="ir.ui.view">
        <field name="name">library.item.tree</field>
        <field name="model">library.item</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'available'"
                  decoration-warning="status == 'limited'"
                  decoration-danger="status == 'unavailable'"
                  decoration-info="status == 'maintenance'">
                <field name="name"/>
                <field name="category"/>
                <field name="condition"/>
                <field name="total_quantity" string="Total"/>
                <field name="available_quantity" string="Available"/>
                <field name="status" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_library_item_form" model="ir.ui.view">
        <field name="name">library.item.form</field>
        <field name="model">library.item</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_maintenance" string="Maintenance" type="object"
                            class="btn-warning"
                            invisible="condition == 'maintenance'"/>
                    <button name="action_available" string="Set Available" type="object"
                            class="btn-success"
                            invisible="condition != 'maintenance'"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="available,limited,unavailable,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Equipment Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Item Details">
                            <field name="category"/>
                            <field name="condition"/>
                            <field name="total_quantity"/>
                        </group>
                        <group string="Availability">
                            <field name="available_quantity"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_library_item_search" model="ir.ui.view">
        <field name="name">library.item.search</field>
        <field name="model">library.item</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Available"   name="available"   domain="[('status', '=', 'available')]"/>
                <filter string="Limited"     name="limited"     domain="[('status', '=', 'limited')]"/>
                <filter string="Unavailable" name="unavailable" domain="[('status', '=', 'unavailable')]"/>
                <filter string="Maintenance" name="maintenance" domain="[('status', '=', 'maintenance')]"/>
                <separator/>
                <filter string="Monitor"  name="cat_monitor"  domain="[('category', '=', 'monitor')]"/>
                <filter string="Cable"    name="cat_cable"    domain="[('category', '=', 'cable')]"/>
                <filter string="Keyboard" name="cat_keyboard" domain="[('category', '=', 'keyboard')]"/>
                <filter string="Mouse"    name="cat_mouse"    domain="[('category', '=', 'mouse')]"/>
                <filter string="Charger"  name="cat_charger"  domain="[('category', '=', 'charger')]"/>
                <filter string="Webcam"   name="cat_webcam"   domain="[('category', '=', 'webcam')]"/>
                <group expand="0" string="Group By">
                    <filter string="Category"  name="group_category"  context="{'group_by': 'category'}"/>
                    <filter string="Status"    name="group_status"    context="{'group_by': 'status'}"/>
                    <filter string="Condition" name="group_condition" context="{'group_by': 'condition'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_library_item" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">library.item</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>